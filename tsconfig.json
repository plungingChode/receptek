{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowJs": true,
    "checkJs": true,
    
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "~": ["src"]
    }
  },
  "exclude": [
    "./dist/**/*"
  ]
}
