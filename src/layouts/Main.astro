---
import { href } from "~/util.js";

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title && title + " - "}Receptek</title>

    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" /><link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    /><link
      href="https://fonts.googleapis.com/css2?family=Caveat&family=Roboto+Slab:wght@100;200;300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="font-body font-light bg-cozy-beige-300/75 dark:bg-cozy-brown-900 dark:text-cozy-beige-50"
  >
    <header class="flex items-center px-4 h-14 bg-cozy-brown-700 text-cozy-beige-50 dark:bg-cozy-brown-800/50 dark:text-cozy-beige-200 font-caveat text-4xl">
      <a href={href("/recept")}>Receptek</a>
      <slot name="actions" />
    </header>
    <slot />
  </body>
</html>
